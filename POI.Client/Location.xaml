<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POI.Client.Location">

    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="GPS-Abfragen" Clicked="Button_OnClicked"></Button>
                <Button Text="Umkreissuche"></Button>
            </StackLayout>
            <Label Text="Aktuelle Position"></Label>

            <Label Text="Latitude"></Label>
            <Entry IsEnabled="False" Placeholder="Positionsbestimmung erforderlich"></Entry>
            <Label Text="Longtitude"></Label>
            <Entry IsEnabled="False" Placeholder="Positionsbestimmung erforderlich"></Entry>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>